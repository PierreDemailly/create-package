{
  "name": "@pierred/create-package",
  "version": "0.0.5",
  "description": "Generate Node.js package boilerplate",
  "scripts": {
    "test": "vitest run",
    "test:c8": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --ext js --ext mjs --fix",
    "pkg:ok": "npx pkg-ok"
  },
  "bin": {
    "create-package": "./index.mjs"
  },
  "keywords": [
    "create",
    "package",
    "init",
    "lib"
  ],
  "author": "Pierre Demamilly <pierredemailly.pro@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@nodesecure/eslint-config": "^1.7.0",
    "@topcli/prompts": "^0.1.1",
    "@topcli/spinner": "^2.0.0",
    "ansi-styles": "^6.2.1",
    "spdx-license-list": "^6.6.0"
  },
  "devDependencies": {
    "@release-it/keep-a-changelog": "^3.1.0",
    "@vitest/coverage-c8": "^0.31.0",
    "eslint": "^8.40.0",
    "pkg-ok": "^3.0.0",
    "vitest": "^0.31.4"
  },
  "files": [
    "index.mjs",
    "src"
  ],
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": "@nodesecure/eslint-config",
    "parserOptions": {
      "sourceType": "module",
      "requireConfigFile": false
    }
  }
}
